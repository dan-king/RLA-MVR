<div>
    <h1><i class="fa fa-upload"></i> Load Contest</h1>
    {{#if message}}
        <div class="alert alert-info">
            <h1><i class="fa fa-info-circle"></i> {{ message }}</h1>
        </div>
    {{/if }}
</div>

<h2 class="alert alert-info"><i class="fa fa-info-circle"></i> Confirm new contest</h2>

<h4 class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> Note! Creating a new contest will end the current contest (if any)</h4>

<form method='post' name="contest-confirm-form" id="contest-confirm-form" action="/load-contest/confirmed/">
<div>
    <button type="submit" class="btn btn-success btn-lg fa fa-arrow-right"> Create Contest</button>
</div>
</form>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title"><span class="fa fa-file"></span> <code>{{upload_name}}</code></h3>
    </div>
    <div class="panel-body">
        <pre id="upload_json">
       </pre>
    </div>
</div>

<script>
// ===========================================================
// Initial page load
// ===========================================================
$(function(){
    var upload_json = {{{json upload_json}}}
    var upload_string = JSON.stringify(upload_json)
    $("#upload_json").append(upload_string)
})
</script>
